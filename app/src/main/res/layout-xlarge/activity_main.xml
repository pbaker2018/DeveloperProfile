<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" android:layout_marginTop="184dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="DevSlopes"
            android:layout_width="153dp"
            android:layout_height="51dp"
            android:id="@+id/devSlopesTxt" android:textSize="32sp"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/logo" android:layout_marginStart="36dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/cameraBtn"
            app:layout_constraintStart_toEndOf="@+id/devSlopesTxt" app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintEnd_toStartOf="@+id/favoritesBtn" app:layout_constraintTop_toTopOf="@+id/favoritesBtn"
            app:layout_constraintBottom_toBottomOf="@+id/favoritesBtn"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="24dp" android:layout_marginRight="24dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/favoritesBtn"
            app:layout_constraintStart_toEndOf="@+id/cameraBtn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/inboxBtn" app:layout_constraintTop_toTopOf="@+id/inboxBtn"
            app:layout_constraintBottom_toBottomOf="@+id/inboxBtn"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/inboxBtn"
            app:layout_constraintStart_toEndOf="@+id/favoritesBtn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView11"
            android:scaleType="centerCrop" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView13" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintDimensionRatio="w,9:16"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView12" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintDimensionRatio="w,9:16" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView13"
            android:scaleType="centerCrop" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="16dp"
            app:layout_constraintDimensionRatio="w,9:16"
            app:layout_constraintTop_toTopOf="@+id/imageView12"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView14"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView12"
            app:layout_constraintDimensionRatio="w,9:16" app:layout_constraintHorizontal_bias="0.0"
            android:scaleType="centerCrop"/>
    <Button
            android:text="Customise Dashboard"
            android:layout_width="308dp"
            android:layout_height="55dp"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.507" android:textSize="24sp"
            android:background="#e54304" android:textColor="@android:color/background_light"
            android:textStyle="bold" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView14"/>
</android.support.constraint.ConstraintLayout>